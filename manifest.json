
  {
    "manifest_version": 3,
    "name": "Random Meme Generator",
    "version": "1.0",
    "description": "Generate random memes from different categories with one click!",
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://meme-api.com/*"
    ]
}
